<% if post.live? %>
  <article class="blog_post" id="<%= dom_id(post) %>">
    <header>
      <h1><%= link_to post.title, blog_post_url(post) %></h1>
      <details>
        <time datetime="<%=l post.published_at.to_date, :format => :default %>" class='posted_at'>
          <%= t('blog.shared.posts.created_at', :when => l(post.published_at.to_date, :format => :short)) %>.
        </time><%= " by #{post.administrator.username}" if post.administrator.present? %>
        <% if (categories = post.blog_categories).any? %>
          <aside class='filed_in'>
            <%= t('filed_in', :scope => 'blog.posts.show') %>
            <%=raw categories.collect { |category| link_to category.title, blog_category_url(category) }.to_sentence %>
          </aside>
        <% end %>
        <% if (tags = post.tags_array).any? %>
          <aside class='tagged'>
            <%= t('tagged', :scope => 'blog.posts.show') %>
            <%=raw tags.collect { |tag| link_to tag, tagged_posts_path(tag.parameterize) }.to_sentence %>
          </aside>
        <% end %>
      </details>
    </header>
    <section class='clearfix'>
      <%= truncate(post.body,
                   :length => RefinerySetting.find_or_set(:blog_post_teaser_length, 250),
                   :preserve_html_tags => true) %>
    </section>
    <div class="blog_post_footer"">
      <p>
        <%= link_to t('blog.shared.posts.read_more'), blog_post_url(post) %>


        <aside class='comment_count'>
          <% if BlogPost.comments_allowed? %>
            <% if post.blog_comments.any? %>
               (<%= pluralize(post.blog_comments.approved.count, t('blog.shared.comments.singular')) %>)
            <% else %>
                  (<%= t('blog.shared.comments.none') %>)
            <% end %>
          <% end %>
        </aside>

    </div>
  </article>
<% end %>

